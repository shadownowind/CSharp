<Page x:Class="记忆大师游戏.View.IntroductionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:记忆大师游戏.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="IntroductionPage">

    <Grid Background="BurlyWood">
        <Image Source="/Resources/Image/IntroductionBackground.png" Stretch="Fill"/>
        <TextBlock x:Name="txbIntroduction" HorizontalAlignment="Left" Height="263" Margin="110,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" FontSize="16" Foreground="CornflowerBlue"/>
        <Button x:Name="btnConfirm" Content="确定" HorizontalAlignment="Left" Height="26" Margin="395,362,0,0" VerticalAlignment="Top" Width="87" FontSize="14" Style="{DynamicResource ButtonHome}" Click="btnConfirm_Click"/>
    </Grid>
</Page>
